@model IEnumerable<MvcProject.WebApplication.Models.StudentHasProject>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["StudentParm"]">@Html.DisplayNameFor(model => model.Student)</a>
				@*a*@
			</th>
			<th>
				<a asp-action="Index" asp-route-sortOrder="@ViewData["ProjectParm"]">@Html.DisplayNameFor(model => model.Project)</a>
				@*a*@
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.StudentId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProjectId)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
